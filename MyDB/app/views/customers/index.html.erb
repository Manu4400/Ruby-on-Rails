<body style="margin:0; background:#FFFFFF;">

<div style="
  max-width:1200px;
  margin:0 auto;
  padding:40px 20px 80px;
  font-family: Inter, system-ui, sans-serif;
  background:#FFFFFF;
">


  <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:36px;">
    <h1 style="font-size:28px; font-weight:700; color:#999799;">
      Customers
    </h1>

    <%= link_to "+ New Customer", new_customer_path,
      style: "background:#BDD358; color:#FFFFFF; padding:10px 18px; border-radius:10px; text-decoration:none; font-weight:600;"
    %>
  </div>

  <div style="
    display:grid;
    grid-template-columns:repeat(auto-fill,minmax(320px,1fr));
    gap:28px;
  ">

    <% @customers.each do |customer| %>
      <div style="
        background:#FFFFFF;
        border-radius:16px;
        box-shadow:0 8px 22px rgba(153,151,153,0.18);
        padding:22px;
        transition:transform .2s ease, box-shadow .2s ease;
      "
      onmouseover="this.style.transform='translateY(-4px)'; this.style.boxShadow='0 14px 30px rgba(153,151,153,0.25)'"
      onmouseout="this.style.transform='none'; this.style.boxShadow='0 8px 22px rgba(153,151,153,0.18)'"
      >

        <div style="display:flex; gap:14px; align-items:center; margin-bottom:18px;">
          <div style="
            width:46px;
            height:46px;
            border-radius:50%;
            background:#BDD358;
            color:#FFFFFF;
            display:flex;
            align-items:center;
            justify-content:center;
            font-weight:700;
            font-size:18px;
          ">
            <%= customer.name.present? ? customer.name[0].upcase : "?" %>

          </div>

          <div>
            <div style="font-size:17px; font-weight:600; color:#999799;">
              <%= customer.name %>
            </div>
            <div style="font-size:14px; color:#999799;">
              <%= customer.email %>
            </div>
          </div>
        </div>

        <div style="height:1px; background:#E5E059; margin-bottom:16px;"></div>


        <div style="display:flex; justify-content:space-between; align-items:center;">
          <div style="display:flex; gap:18px;">
            <%= link_to "View", customer,
              style: "color:#999799; font-weight:500; text-decoration:none;" %>

            <%= link_to "Edit", edit_customer_path(customer),
              style: "color:#BDD358; font-weight:600; text-decoration:none;" %>
          </div>

          <%= button_to "Delete", customer,
            method: :delete,
            data: { confirm: "Are you sure?" },
            form: { style: "margin:0; padding:0; border:none; background:transparent; box-shadow:none;" },
            style: "background:#FFFFFF; color:#E5625E; border:1px solid #E5625E; padding:6px 16px; border-radius:999px; font-size:13px; cursor:pointer;"
          %>
        </div>

      </div>
    <% end %>
  </div>

  <% if @customers.empty? %>
    <div style="margin-top:60px; text-align:center; color:#999799;">
      No customers found.
    </div>
  <% end %>

</div>
</body>
