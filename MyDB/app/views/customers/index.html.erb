<style>
  body {
    font-family: Arial, sans-serif;
    background: #f9fafb;
  }

  .container {
    max-width: 1000px;
    margin: 30px auto;
    padding: 20px;
  }

  h1 {
    color: #111827;
    margin-bottom: 10px;
  }

  .new-btn {
    display: inline-block;
    margin-bottom: 20px;
    padding: 8px 14px;
    background: #2563eb;
    color: #fff;
    text-decoration: none;
    border-radius: 6px;
    font-size: 14px;
  }

  /* SIDE BY SIDE LAYOUT */
  .customers {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 16px;
  }

  .customer-card {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 14px;
  }

  .customer-name {
    font-weight: bold;
    font-size: 16px;
    color: #111827;
  }

  .customer-email {
    font-size: 14px;
    color: #6b7280;
    margin-bottom: 6px;
  }

  .actions a {
    margin-right: 10px;
    font-size: 14px;
    text-decoration: none;
    color: #2563eb;
  }

  .actions a.delete {
    color: #dc2626;
  }

  img {
    display: block;
    margin-top: 6px;
    border-radius: 6px;
  }
</style>

<div class="container">
  <h1>Customers</h1>

  <%= link_to "New Customer", new_customer_path, class: "new-btn" %>

  <div class="customers">
    <% @customers.each do |customer| %>
      <div class="customer-card">

        <div class="customer-name">
          <%= customer.name %>
        </div>

        <div class="customer-email">
          <%= customer.email %>
        </div>

        <% if customer.about_me.present? %>
          <p>
            <%= truncate(strip_tags(customer.about_me.to_s), length: 60) %>
          </p>
        <% end %>

        <% if customer.profile_photo.attached? %>
        <% if customer.profile_photo.image? %>
          <%= image_tag customer.profile_photo, width: 60 %>
       <% end %>
        <%else%>
        <p>No Profile Photo</p>
        <% end %>

        <div class="actions">
          <%= link_to "View", customer %>
          <%= link_to "Edit", edit_customer_path(customer) %>
          <%= link_to "Delete", customer,
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "delete" %>
        </div>

      </div>
    <% end %>
  </div>

  <% if @customers.empty? %>
    <p>No customers found.</p>
  <% end %>
</div>
