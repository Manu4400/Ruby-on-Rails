<style>
  body {
    font-family: Arial, sans-serif;
    background: #f9fafb;
  }

  .container {
    max-width: 600px;
    margin: 40px auto;
    padding: 20px;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
  }

  h1 {
    margin-bottom: 20px;
    color: #111827;
  }

  p {
    margin-bottom: 14px;
    color: #374151;
  }

  strong {
    color: #111827;
  }

  img {
    margin-top: 8px;
    border-radius: 6px;
  }

  .actions a {
    margin-right: 10px;
    text-decoration: none;
    color: #2563eb;
    font-weight: 500;
  }

  .actions a.delete {
    color: #dc2626;
  }

  hr {
    margin: 20px 0;
    border: none;
    border-top: 1px solid #e5e7eb;
  }
</style>

<div class="container">

  <h1>Customer Details</h1>

  <p>
    <strong>Name:</strong><br>
    <%= @customer.name.presence || "-" %>
  </p>

  <p>
    <strong>Email:</strong><br>
    <%= mail_to @customer.email, @customer.email %>
  </p>

  <p>
    <strong>About Me:</strong><br>
    <%= @customer.about_me.present? ? @customer.about_me : "No description" %>
  </p>
  <p>
    <strong>Date_of_birth:</strong><br>
    <%= @customer.date_of_birth.present? ? @customer.date_of_birth : "No Date_of_birth" %>
  </p>

  <p>
    <strong>Profile Photo:</strong><br>
    <% if @customer.profile_photo.attached? %>
      <%= image_tag @customer.profile_photo, width: 120 %>
    <% else %>
      No profile photo
    <% end %>
  </p>

  <hr>

  <div class="actions">
    <%= link_to "Edit", edit_customer_path(@customer) %>
    <%= link_to "Back", customers_path %>
   <%= button_to "Delete", @customer,
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: "delete" %>


</div>
