<div class="container">
  <% if notice.present? %>
    <div class="notice"><%= notice %></div>
  <% end %>

  <h1 class="page-title">Customer</h1>

  <%= render @customer %>

  <div style="margin-top:1rem">
    <%= link_to "Edit", edit_customer_path(@customer), class: "btn btn-ghost" %>
    <%= link_to "Back to customers", customers_path, class: "btn btn-ghost" %>
    <%= button_to "Destroy", @customer, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-ghost" %>
  </div>
</div>
