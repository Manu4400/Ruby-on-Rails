<h1 style="
  font-size: 2.2rem;
  font-weight: 800;
  color: #0f172a;
  border-bottom: 2px solid #e2e8f0;
  padding-bottom: 14px;
  margin-bottom: 32px;
">
  Customers
</h1>

<%= link_to "New customer",
  new_customer_path,
  style: "
    display: inline-block;
    margin-bottom: 32px;
    background: linear-gradient(135deg, #2563eb, #1e40af);
    color: white;
    padding: 12px 22px;
    border-radius: 10px;
    font-weight: 600;
    text-decoration: none;
    box-shadow: 0 8px 20px rgba(37,99,235,0.35);
  "
%>

<div style="
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 32px;
">

<% @customers.each do |customer| %>
  <div style="
    background: linear-gradient(180deg, #ffffff, #f8fafc);
    border-radius: 18px;
    padding: 24px;
    border: 1px solid #e2e8f0;
    box-shadow: 0 10px 28px rgba(0,0,0,0.08);
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
  " onmouseover="this.style.transform='translateY(-6px)'"
     onmouseout="this.style.transform='translateY(0)'">

    <!-- Header -->
    <div style="display:flex; gap:14px; align-items:center; margin-bottom:16px;">
      <!-- Avatar -->
      <div style="
        width:44px;
        height:44px;
        border-radius:50%;
        background: linear-gradient(135deg,#2563eb,#1e40af);
        color:white;
        display:flex;
        align-items:center;
        justify-content:center;
        font-weight:700;
        font-size:1rem;
      ">
        <%= customer.name[0].upcase %>
      </div>

      <div>
        <div style="
          font-size: 1.15rem;
          font-weight: 700;
          color: #0f172a;
        ">
          <%= customer.name %>
        </div>

        <div style="
          color: #2563eb;
          font-size: 0.9rem;
          word-break: break-word;
        ">
          <%= customer.email %>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div style="
      display:flex;
      gap:10px;
      margin-top:auto;
      padding-top:16px;
      border-top:1px solid #e2e8f0;
    ">

      <%= link_to "Show", customer,
        style: "
          flex:1;
          text-align:center;
          padding:8px 0;
          border-radius:8px;
          background:#eff6ff;
          color:#2563eb;
          font-weight:600;
          text-decoration:none;
        "
      %>

      <%= link_to "Edit", edit_customer_path(customer),
        style: "
          flex:1;
          text-align:center;
          padding:8px 0;
          border-radius:8px;
          background:#eff6ff;
          color:#2563eb;
          font-weight:600;
          text-decoration:none;
        "
      %>

      <%= button_to "Delete",
        customer,
        method: :delete,
        data: { confirm: "Are you sure?" },
        form: { style: "flex:1" },
        style: "
          width:100%;
          padding:8px 0;
          border-radius:8px;
          background:#fee2e2;
          border:none;
          color:#dc2626;
          font-weight:600;
          cursor:pointer;
        "
      %>

    </div>
  </div>
<% end %>

</div>
