<%= form_with model: product, local: true do |f| %>

  
  <div style="margin-bottom: 12px;">
    <label>Name</label><br>
    <%= f.text_field :name, style: "width:100%; padding:6px;" %>
  </div>

 
  <div style="margin-bottom: 12px;">
    <label>Description</label><br>
    <%= f.text_area :description, rows: 3, style: "width:100%; padding:6px;" %>
  </div>


  <div style="margin-bottom: 12px;">
    <label>Price</label><br>
    <%= f.number_field :price, step: 0.01, style: "width:100%; padding:6px;" %>
  </div>

  <div style="margin-bottom: 12px;">
    <label>Stock</label><br>
    <%= f.number_field :stock, style: "width:100%; padding:6px;" %>
  </div>


  <div style="margin-bottom: 12px;">
    <label>Feedback</label><br>
    <%= f.rich_text_area :feedback %>
  </div>
  <div style="margin-bottom: 12px;">
    <label>Email</label><br>
    <%= f.email_field :email %>
  </div>


  <div style="margin-bottom: 12px;">
    <label>Product Photos</label><br>
    <%= f.file_field :product_photos,multiple:true %>
  </div>

    <div style="margin-bottom: 12px;">
    <label>Invoice</label><br>
    <%= f.file_field :invoice %>
  </div>

 
  <div style="margin-bottom: 12px;">
    <%= f.check_box :is_active %>
    <label>Is Active</label>
  </div>

  
  <div>
    <%= f.submit product.persisted? ? "Update Product" : "Create Product" %>
  </div>

<% end %>
